<% include ../partials/header %>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Drink iQ</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Drinks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <div id="drink-container" class="container mt-5">
        <% if(!drink) { %>
        <h2>Nothing Here</h2>
        <% } %>
        <% if(drink) { %>
        <div class="col-md-6">
            <div class="row justify-content-center">
                <h4>Drink Name: <%= drink.name %></h4>
                <p>Description: <%= drink.description %></p>
                
                <p><%= drink.notes %></p>
                <div id="img-container">
                    <img id="drink-img" src="/uploads/<%= drink.image %>" alt="alt image" class="responsive-img">
                </div>
                
            </div>
            
        </div>

        <div class="col-md-6">
            <% if(drink.ingredients) { %>
            <h5>Ingredients:</h5>
            <hr>
            <ul>
                <% drink.ingredients.forEach(ingredient => { %>
                <li><%= ingredient.name %> - <%= ingredient.amt %> <%= ingredient.postscript %></li>
                <% }); %>
            </ul>
            <% } %>
            <div id="buttons">
                <a href="/api/<%= drink._id %>/edit" class="btn btn-success">Edit</a>
                <form action="/api/<%= drink._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger ml-3">Delete</button>
                </form>
            </div>
        </div>
        <% } %>
    </div>

<% include ../partials/footer %>